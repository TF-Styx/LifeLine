<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 1. Стиль для кнопок навигации по месяцам (стрелки влево/вправо) -->
    <Style x:Key="CalendarDayButtonStyle" TargetType="CalendarDayButton">
        <Setter Property="Background" Value="{StaticResource App.SecondColor}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CalendarDayButton">
                    <Grid>
                        <Rectangle x:Name="TodayBackground" Fill="#33AAAAAA" Opacity="0" RadiusX="1" RadiusY="1"/>
                        <Rectangle x:Name="SelectedBackground" Fill="#66888888" Opacity="0" RadiusX="1" RadiusY="1"/>
                        <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}"/>
                        <ContentPresenter x:Name="NormalText" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="5,1,5,1" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#44AAAAAA" />
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#66888888" />
                <Setter Property="Foreground" Value="White" />
            </Trigger>
            <Trigger Property="IsBlackedOut" Value="True">
                <Setter Property="Opacity" Value="0.4"/>
            </Trigger>
            <DataTrigger Binding="{Binding DayOfWeek}" Value="Saturday">
                <Setter Property="Foreground" Value="#FF6347" />
            </DataTrigger>
            <DataTrigger Binding="{Binding DayOfWeek}" Value="Sunday">
                <Setter Property="Foreground" Value="#FF6347" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!-- 2. Стиль для кнопок дней в календаре (Button) -->
    <Style x:Key="CalendarButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Rectangle x:Name="SelectedBackground" Fill="#66888888" Opacity="0" RadiusX="1" RadiusY="1"/>
                        <ContentPresenter x:Name="NormalText" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="1,0,1,1" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#44AAAAAA" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="CalendarItemStyle" TargetType="CalendarItem">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CalendarItem">
                    <Grid x:Name="PART_Root">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid x:Name="PART_Header" Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <!-- Здесь применяется стиль CalendarButtonStyle -->
                            <Button x:Name="PART_HeaderButton" Grid.Column="1" Style="{StaticResource CalendarButtonStyle}" FontWeight="Bold" Focusable="False" />
                            <RepeatButton x:Name="PART_PreviousButton" Grid.Column="0" Focusable="False" HorizontalAlignment="Left" Width="28" Height="28">
                                <RepeatButton.Template>
                                    <ControlTemplate>
                                        <Border Background="Transparent">
                                            <Path Data="M15.41,7.41L14,6L8,12L14,18L15.41,16.59L10.83,12Z" Fill="White" Stretch="Uniform"/>
                                        </Border>
                                    </ControlTemplate>
                                </RepeatButton.Template>
                            </RepeatButton>
                            <RepeatButton x:Name="PART_NextButton" Grid.Column="2" Focusable="False" HorizontalAlignment="Right" Width="28" Height="28">
                                <RepeatButton.Template>
                                    <ControlTemplate>
                                        <Border Background="Transparent">
                                            <Path Data="M8.59,16.59L10,18L16,12L10,6L8.59,7.41L13.17,12Z" Fill="White" Stretch="Uniform"/>
                                        </Border>
                                    </ControlTemplate>
                                </RepeatButton.Template>
                            </RepeatButton>
                        </Grid>
                        <Grid x:Name="PART_MonthView" Grid.Row="1" HorizontalAlignment="Center" Margin="6,-1,6,6" Visibility="Visible"/>
                        <Grid x:Name="PART_YearView" Grid.Row="1" HorizontalAlignment="Center" Margin="6,-1,6,6" Visibility="Hidden"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 3. Стиль для самого календаря (Calendar) -->
    <Style x:Key="ModernCalendarStyle" TargetType="{x:Type Calendar}">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="#FF1C1C24"/>
        <Setter Property="BorderBrush" Value="White"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CalendarButtonStyle" Value="{DynamicResource CalendarButtonStyle}"/>
        <Setter Property="CalendarDayButtonStyle" Value="{DynamicResource CalendarDayButtonStyle}"/>
        <Setter Property="CalendarItemStyle" Value="{DynamicResource CalendarItemStyle}"/>
        <Setter Property="CalendarDayButtonStyle" Value="{StaticResource CalendarDayButtonStyle}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Calendar}">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            CornerRadius="6" Padding="10">
                        <StackPanel x:Name="PART_Root" HorizontalAlignment="Center">
                            <CalendarItem x:Name="PART_CalendarItem"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ОСНОВНОЙ СТИЛЬ ДЛЯ DATEPICKER -->
    <Style TargetType="DatePicker">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="18" />
        <Setter Property="Padding" Value="8,5,5,5"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="CalendarStyle" Value="{DynamicResource ModernCalendarStyle}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="DatePicker">
                    <Border x:Name="OuterBorder" 
                            CornerRadius="6" 
                            Background="{StaticResource App.MainColor}" 
                            BorderBrush="White" 
                            BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <DatePickerTextBox x:Name="PART_TextBox" 
                                               Grid.Column="0" 
                                               Padding="{TemplateBinding Padding}" 
                                               VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}" 
                                               HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                               FocusVisualStyle="{x:Null}" FontSize="{TemplateBinding FontSize}" 
                                               Foreground="{TemplateBinding Foreground}" CaretBrush="{TemplateBinding Foreground}" 
                                               SelectionBrush="#FF3498DB">
                                <DatePickerTextBox.Style>
                                    <Style TargetType="DatePickerTextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="DatePickerTextBox">
                                                    <Border x:Name="InnerBorder" 
                                                            Background="Transparent" 
                                                            BorderBrush="Transparent" 
                                                            BorderThickness="0" 
                                                            CornerRadius="6">
                                                        <ScrollViewer x:Name="PART_ContentHost" 
                                                                      HorizontalScrollBarVisibility="Hidden" 
                                                                      VerticalScrollBarVisibility="Hidden"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </DatePickerTextBox.Style>
                            </DatePickerTextBox>
                            <Button x:Name="PART_Button" 
                                    Grid.Column="1" 
                                    Foreground="White" 
                                    Focusable="False" 
                                    VerticalAlignment="Center" 
                                    Margin="0,0,10,0" 
                                    Width="20" Height="20">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Grid Background="Transparent">
                                            <Path Data="M9,10V12H7V10H9M13,10V12H11V10H13M17,10V12H15V10H17M19,3H18V1H16V3H8V1H6V3H5C3.89,3 3,3.9 3,5V19C3,20.1 3.9,21 5,21H19C20.1,21 21,20.1 21,19V5C21,3.9 20.1,3 19,3M19,19H5V8H19V19Z" Fill="{TemplateBinding Foreground}" Stretch="Uniform"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <Popup x:Name="PART_Popup" 
                                   AllowsTransparency="True" 
                                   Placement="Bottom" StaysOpen="False"
                                   PlacementTarget="{Binding RelativeSource={RelativeSource TemplatedParent}}"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding IsDropDownOpen, RelativeSource={RelativeSource Self}}" Value="True">
                            <Setter TargetName="PART_Popup" Property="IsOpen" Value="True"/>
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>