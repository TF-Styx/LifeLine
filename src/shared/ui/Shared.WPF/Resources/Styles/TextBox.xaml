<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:helpers="clr-namespace:Shared.WPF.Resources.Attachables" 
                    xmlns:cc="clr-namespace:Shared.WPF.Resources.Controls">

    <!-- ╔═════════════════════════════════════════════════════════════════════════════╗ -->
    <!-- ║                     LoginControl - PlaceHolder - Icon                       ║ -->
    <!-- ╚═════════════════════════════════════════════════════════════════════════════╝ -->
    
    <Style TargetType="{x:Type cc:PlaceHolderTextBox}" BasedOn="{StaticResource {x:Type TextBox}}">
        <Setter Property="Background" Value="#212126"/>
        <Setter Property="Foreground" Value="#8C95A4"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="5 2.5"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="BorderBrush" Value="#33343A"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type cc:PlaceHolderTextBox}">
                    <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="{TemplateBinding CornerRadius}"
                                    SnapsToDevicePixels="True">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Control x:Name="IconPresenter" 
                                             Grid.Column="0" 
                                             Margin="8 0 4 0" 
                                             Width="20"
                                             Height="20"
                                             Foreground="#8C95A4"
                                             VerticalAlignment="Center"
                                             Template="{Binding Path=(helpers:TextBoxHelper.Icon), 
                                                       RelativeSource={RelativeSource TemplatedParent}}"/>

                            <Grid Grid.Column="1">
                                <!-- Это сам элемент для ввода текста -->
                                <ScrollViewer x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                                <!-- Это TextBlock для плейсхолдера -->
                                <TextBlock x:Name="Placeholder"
                                               Text="{TemplateBinding PlaceHolder}"
                                               Foreground="#8C95A4"
                                               Margin="5,0,0,0"
                                               VerticalAlignment="Center"
                                               IsHitTestVisible="False"
                                               Visibility="Collapsed"/>
                            </Grid>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Триггер, который показывает плейсхолдер, если текст пустой -->
                        <Trigger Property="Text" Value="">
                            <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <!-- Можно добавить триггеры для фокуса, наведения мыши и т.д. -->
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="#FF569DE5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>