<Application x:Class="LifeLine.HrPanel.Desktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LifeLine.HrPanel.Desktop"
             xmlns:converters="clr-namespace:Shared.WPF.Resources.ValueConverters;assembly=Shared.WPF">
    <Application.Resources>
        <ResourceDictionary>
            <converters:FullNameValueConverter x:Key="FullNameValueConverter"/>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Shared.WPF;component/Resources/Brushes/AppBrushes.xaml"/>
                <ResourceDictionary Source="/Shared.WPF;component/Resources/Styles/DataGrid.xaml"/>
                <ResourceDictionary Source="/Shared.WPF;component/Resources/Styles/DatePicker.xaml"/>
                <ResourceDictionary Source="/Shared.WPF;component/Resources/Styles/TextBlock.xaml"/>
                <ResourceDictionary Source="/Shared.WPF;component/Resources/Styles/ComboBox.xaml"/>
                <ResourceDictionary Source="/Shared.WPF;component/Resources/Templates/Icons.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
