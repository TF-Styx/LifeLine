                                <ComboBox Width="175" Height="25" Margin="0 0 10 5"
                                          VerticalContentAlignment="Center"
                                          ItemsSource="{Binding DepartmentList}"
                                          SelectedItem="{Binding ComboBoxSelectedDepartment}"
