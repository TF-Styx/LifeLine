                                <GridView>
                                    <GridViewColumn Header="Сотрудники">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Converter={StaticResource FullNameConvertor}}" TextWrapping="WrapWithOverflow"/>
                                                </StackPanel>
                                            </DataTemplate>
