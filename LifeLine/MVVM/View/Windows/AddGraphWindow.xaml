                                        <StackPanel Orientation="Horizontal" Margin="2">
                                            <TextBlock Text="От: " Width="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            <DatePicker Width="150" Margin="10 0 0 0" BorderThickness="0" VerticalContentAlignment="Center" SelectedDate="{Binding FirstDate}"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="2">
                                            <TextBlock Text="До: " Width="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            <DatePicker Width="150" Margin="10 0 0 0" BorderThickness="0" VerticalContentAlignment="Center" SelectedDate="{Binding SecondDate}"/>
                                        </StackPanel>
                                        <Button Content="Применить" 
                                                Command="{Binding ApplyFilterCommand}"
                                                Style="{StaticResource GraphBTN}"
                                                Template="{StaticResource MainButtonTemplate}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </Popup>
                        <!--#endregion-->

                        <Border VerticalAlignment="Top" CornerRadius="10" BorderThickness="1" BorderBrush="Black" Background="#FFA0C5D1" Margin="10">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" Direction="300"/>
                            </Border.Effect>
                            <StackPanel Margin="5">
                                <DockPanel>
                                    <StackPanel HorizontalAlignment="Left">
                                        <TextBlock d:Text="Сотрудник" HorizontalAlignment="Left" VerticalAlignment="Center" Text="{Binding SelectedEmployee, Converter={StaticResource FullNameConvertor}}"/>
                                    </StackPanel>
                                    <StackPanel HorizontalAlignment="Right">
                                        <Button Name="btnFilterPeriod" Background="#00DDDDDD" 
                                                BorderBrush="#00707070"
                                                Command="{Binding OpenPopupFilterPeriodCommand}">
                                            <fa:ImageAwesome Icon="Solid_Filter" Width="20" Foreground="#FF486169"/>
                                        </Button>
                                    </StackPanel>
                                </DockPanel>

                                <ScrollViewer HorizontalAlignment="Center" ScrollViewer.HorizontalScrollBarVisibility="Hidden">
                                    <ListView ItemsSource="{Binding TimeTables}" SelectedItem="{Binding SelectedTImeTable}" d:ItemsSource="{d:SampleData ItemCount=15}" FontSize="15">
                                        <!--#region ListView.Resources-->

                                        <ListView.Resources>

                                            <LinearGradientBrush x:Key="ListViewItemSelectedAndMousOver" EndPoint="1,0" StartPoint="1,0">
                                                <GradientStop Color="#FFA0C5D1" Offset="1.0"/>
                                                <GradientStop Color="#FF8AC1D2" Offset="0.0"/>
                                            </LinearGradientBrush>

                                            <!--#region Шаблон для заголовка GridViewColumnHeader-->

                                            <Style TargetType="GridViewColumnHeader">
                                                <Setter Property="Background" Value="#FF8AC1D2"/>
                                                <Setter Property="Foreground" Value="Black"/>
                                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="GridViewColumnHeader">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="5"/>
                                                                </Grid.ColumnDefinitions>
                                                                <Border Background="{TemplateBinding Background}" 
                                                                BorderBrush="#FF8AC1D2" 
                                                                BorderThickness="0,0,1,0" 
                                                                Padding="5" 
                                                                Grid.Column="0">
                                                                    <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" RecognizesAccessKey="True" />
                                                                </Border>
                                                                <Thumb Grid.Column="1" 
                                                               Width="5" 
                                                               Background="#FF8AC1D2" 
                                                               Cursor="SizeWE"/>
                                                            </Grid>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FF8AC1D2"/>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="#FF8AC1D2"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>

                                            <!--#endregion-->

                                            <!--#region Стиль ListView-->

                                            <Style TargetType="ListView">
                                                <Setter Property="Foreground" Value="Black" />
                                                <Setter Property="Background" Value="#FF8AC1D2" />
                                                <Setter Property="FontWeight" Value="Bold"/>
                                                <Setter Property="BorderThickness" Value="0"/>
                                            </Style>

                                            <!--#endregion-->

                                            <!--#region Стиль ListViewItem-->

                                            <Style TargetType="ListViewItem">
                                                <Setter Property="Background" Value="#FFA0C5D1"/>
                                                <Setter Property="BorderBrush" Value="#2A2A2A"/>
                                                <Setter Property="Margin" Value="0 0 0 5"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource ListViewItemSelectedAndMousOver}"/>
                                                        <Setter Property="BorderBrush" Value="#FF595958"/>
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource ListViewItemSelectedAndMousOver}"/>
                                                        <Setter Property="BorderBrush" Value="#FF595958"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>

                                            <!--#endregion-->

                                        </ListView.Resources>

                                        <!--#endregion-->
                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn Header="Расписание" Width="200">
                                                    <GridViewColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="{Binding Date, Converter={StaticResource GraphDateTimeConverter}}"/>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </GridViewColumn.CellTemplate>
                                                </GridViewColumn>
                                                <GridViewColumn Header="Смена" Width="150">
                                                    <GridViewColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="{Binding IdShiftNavigation.ShiftName}"/>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </GridViewColumn.CellTemplate>
                                                </GridViewColumn>
                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                </ScrollViewer>
                            </StackPanel>
                        </Border>
                        <Border VerticalAlignment="Top" CornerRadius="10" BorderThickness="1" BorderBrush="Black" Background="#FFA0C5D1" Margin="10">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" Direction="300"/>
                            </Border.Effect>
                            <StackPanel Margin="5">
                                <TextBlock d:Text="Дата" Margin="5 0 0 0" Text="{Binding DateWork, Converter={StaticResource GraphDateTimeConverter}}"/>
                                <DatePicker Width="200" BorderThickness="0" VerticalContentAlignment="Center" SelectedDate="{Binding DateWork}" Margin="0 5 0 5"/>
                                <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="5">
                                    <TextBlock Text="Смена: " DockPanel.Dock="Left" VerticalAlignment="Center"/>
                                    <ComboBox HorizontalAlignment="Right"
                                              Width="110"
                                              ItemsSource="{Binding Shifts}" DisplayMemberPath="ShiftName"
                                              SelectedItem="{Binding SelectedShift}"
                                              Template="{StaticResource ComboBoxTemplate}"/>
                                </DockPanel>
                                <DockPanel Margin="5" HorizontalAlignment="Stretch">
                                    <TextBlock Text="Начало: " DockPanel.Dock="Left" VerticalAlignment="Center"/>
                                    <toolkit:TimePicker Value="{Binding StartTimeWork, Mode=TwoWay}" HorizontalAlignment="Right" Width="110"/>
                                </DockPanel>
                                <DockPanel Margin="5">
                                    <TextBlock Text="Конец: " DockPanel.Dock="Left" VerticalAlignment="Center"/>
                                    <toolkit:TimePicker Value="{Binding EndTimeWork, Mode=TwoWay}" HorizontalAlignment="Right" Width="110"/>
                                </DockPanel>
                                <StackPanel HorizontalAlignment="Center" Margin="5">
                                    <TextBlock Text="Записка к графику" HorizontalAlignment="Center"/>
                                    <TextBox Margin="0 0 0 0" 
                                             Width="170" Height="100"
                                             d:Text="РАБОТАЙ !!!"
                                             Text="{Binding NoteForGraphik}"
                                             TextWrapping="WrapWithOverflow"
                                             Style="{StaticResource SettingTextBoxStyle}" 
                                             Template="{StaticResource SettingTextBoxTemplate}"/>
                                </StackPanel>
                                <StackPanel HorizontalAlignment="Center" Margin="5">
                                    <Button Content="Сохранить" 
                                            Command="{Binding SaveGraphicCommand}"
                                            Style="{StaticResource GraphBTN}"
                                            Template="{StaticResource MainButtonTemplate}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        <!--#region NewRegion -->
                        <!--<StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
                            --><!--Выриант вывода--><!--
